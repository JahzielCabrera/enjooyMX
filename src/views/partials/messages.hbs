{{#if success_msg}}
<div data-delay='10000' aria-live="polite" aria-atomic="true" style="position: relative; min-height: 100px;" class="py-3 px-5 mx-5">
    <div class="toast item-align-right" style="position: absolute; right: 0; min-weight: 100px" role="alert" aria-live="assertive"
        aria-atomic="true" data-delay="8000">
        <div class="toast-header" style="background-color: rgb(28, 142, 207);">
            <img src="img/logo_icon.png" class="rounded mr-2" alt="logo menup">
            <strong class="mr-auto" style="color: white; opacity: 1;">menup</strong>
            <small style="color: white; opacity: 1;">Ahora</small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true" style="color: white; opacity: 1;">&times;</span>
            </button>
        </div>
        <div class="toast-body" >
            {{success_msg}}
        </div>
    </div>
</div>
{{/if}}