<div class="col-md-4 mx-auto my-5 py-5">
    <div class="card text-center border-white">
        <div class="card-header bg-transparent border-white">
            <h3>Ingresa los datos de tu sucursal</h3>
        </div>
        <br>
        <div class="card-body text-left">
            <form action="/sucursal/new" method="POST">
                <div class="form-group py-2">
                    <label class="text-left label-text"for="exampleInputEmail1">Ingresa el nombre de tu sucursal</label>
                    <input type="text" name="name" class="form-control" placeholder="ej: Sucursal plaza americas" required autofocus>
                </div>
                <div class="form-group py-2">
                    <label class="text-left label-text" for="exampleInputEmail1">Ingresa la direccion de tu sucursal</label>
                    <input type="text" name="adress" class="form-control" , placeholder="ej: Av. las palmas 33" required>
                </div>
                <div class="form-group py-2">
                    <label class="text-left label-text" for="exampleInputEmail1">Ingresa la colonia</label>
                    <input type="text" name="suburb" class="form-control" placeholder="ej: Colonia Buena Vista" required>
                </div>
                <div class="form-group py-2">
                    <label class="text-left label-text" for="exampleInputEmail1">Ingresa la ciudad</label>
                    <input type="text" name="city" class="form-control" placeholder="ej: Xalapa" required>
                </div>
                <div class="form-group py-2">
                    <label class="text-left label-text" for="exampleInputEmail1">Ingresa el estado</label>
                    <input type="text" name="state" class="form-control" placeholder="ej: Veracruz" required>
                </div>
                <div class="form-group py-2">
                    <button class="btn btn-primary btn-block">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>